<!DOCTYPE html>
<html>
  <head>
    <title>PatientIq</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <%= form_tag sign_out_sessions_path, method: :delete do %>
        <%= submit_tag 'Logout' %>
      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>
